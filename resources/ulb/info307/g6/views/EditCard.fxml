<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox minHeight="720.0" minWidth="1280.0" spacing="5.0" stylesheets="@menusStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.EditCard">
    <!-- Left pane : list of decks + home -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="cardListView" prefWidth="169.0" VBox.vgrow="ALWAYS" />
        <Button onAction="#clickBack" prefWidth="169.0" text="Back">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" translateX="-25.0">
                    <Image url="@images/back.png" />
                </ImageView>
            </graphic>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="-4.0" top="-4.0" />
            </padding>
        </Button>
    </VBox>

    <!-- Right pane : textboxes + edit/create/remove card -->
    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Question">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <CheckBox fx:id="gapFillCheckBox" text="Gap-fill" />

            </HBox>
            <TextArea fx:id="questionInput" onKeyTyped="#inputChange" VBox.vgrow="ALWAYS" />

            <Label text="Answer">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextArea fx:id="answerInput" onKeyTyped="#inputChange" VBox.vgrow="ALWAYS" />
        </VBox>

        <HBox alignment="TOP_CENTER" spacing="5.0">
            <Button fx:id="buttonEditCard" contentDisplay="GRAPHIC_ONLY" onAction="#clickEditCard" text="Edit card">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/edit.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Edit Card" /></tooltip>
            </Button>
            <Button fx:id="buttonCreateCard" contentDisplay="GRAPHIC_ONLY" onAction="#clickCreateCard" text="Create card">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/new.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Create Card" /></tooltip>
            </Button>
            <Button fx:id="buttonRemoveCard" contentDisplay="GRAPHIC_ONLY" onAction="#clickRemoveCard" text="Remove card">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/remove.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Remove Card" /></tooltip>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#clickPreview" text="Preview">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true" rotate="90.0">
                        <Image url="@images/play.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Preview Card" /></tooltip>
            </Button>
        </HBox>
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
