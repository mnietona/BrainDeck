<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Achievements">
    <HBox alignment="CENTER" spacing="25.0" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER_LEFT" spacing="25.0">
            <Label text="5 consecutive days of using the app" />
            <Label text="10 consecutive days of using the app" />
            <Label text="Highest knowledge level of deck" />
            <Label text="Deck with at least 10 cards" />
            <Label text="100 cards created" />
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="25.0">
            <ProgressBar fx:id="progressBar1" prefWidth="250.0" progress="0.0" HBox.hgrow="ALWAYS" />
            <ProgressBar fx:id="progressBar2" prefWidth="250.0" progress="0.0" />
            <ProgressBar fx:id="progressBar3" prefWidth="250.0" progress="0.0" />
            <ProgressBar fx:id="progressBar4" prefWidth="250.0" progress="0.0" />
            <ProgressBar fx:id="progressBar5" prefWidth="250.0" progress="0.0" />
        </VBox>
    </HBox>

    <Button onAction="#clickBack" text="Back" />

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
