<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox minHeight="720.0" minWidth="1280.0" spacing="5.0" stylesheets="@menusStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.EditDeck">
    <!-- Left pane : list of decks + home -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="deckListView" prefWidth="207.0" VBox.vgrow="ALWAYS" />
        <Button onAction="#clickHome" prefWidth="169.0" text="Home">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" translateX="-25.0">
                    <Image url="@images/back.png" />
                </ImageView>
            </graphic>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="-4.0" top="-4.0" />
            </padding>
        </Button>
    </VBox>

    <!-- Right pane : selected deck + edit/create/remove deck -->
    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Text fx:id="deckTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="No deck selected" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
        </VBox>

        <HBox alignment="TOP_CENTER" spacing="10">
            <Button fx:id="buttonEdit" contentDisplay="GRAPHIC_ONLY" onAction="#clickEdit" text="Edit deck">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/edit.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Edit Deck" /></tooltip>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" onAction="#clickCreate" text="Create deck">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/new.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Create Deck" /></tooltip>
            </Button>
            <Button fx:id="buttonRemove" contentDisplay="GRAPHIC_ONLY" onAction="#clickRemove" text="Remove deck">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/remove.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Remove Deck" /></tooltip>
            </Button>
            <Button fx:id="buttonResetProba" contentDisplay="GRAPHIC_ONLY" onAction="#clickResetProba" text="Reset probabilities">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/stats.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Reset Probabilities" /></tooltip>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" onAction="#clickImport" text="Import">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/import.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Import" /></tooltip>
            </Button>
            <Button fx:id="buttonExport" contentDisplay="GRAPHIC_ONLY" onAction="#clickExport" text="Export">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <Image url="@images/export.png" />
                    </ImageView>
                </graphic>
                <tooltip><Tooltip style="-fx-font-size: 25px;" text="Export" /></tooltip>
            </Button>
        </HBox>
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
