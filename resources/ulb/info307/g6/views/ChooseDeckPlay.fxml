<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.ChooseDeckPlay">

    <!-- Left pane : list of decks + home -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="listDecks" prefWidth="169.0" VBox.vgrow="ALWAYS" />
        <Button fx:id="buttonHome" onAction="#clickHome" text="Home" />
    </VBox>

    <!-- Right pane : card + knowledge lvl + flip + next -->
    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">

        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Pane fx:id="cardBackground" maxHeight="250.0" maxWidth="400.0" minHeight="250.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0" style="-fx-background-color: transparent; ">
                <VBox alignment="CENTER" maxHeight="250.0" maxWidth="400.0" minHeight="250.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0" spacing="5.0">
                    <Text fx:id="displayTextQA" text="Select a deck on the left" textAlignment="CENTER" wrappingWidth="390.0">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Text>
                </VBox>
            </Pane>
        </VBox>

        <HBox alignment="CENTER" spacing="5.0">
            <!-- TODO: add onAction and id -->
            <Button text="Very bad" />
            <Button text="Bad" />
            <Button text="Average" />
            <Button text="Good" />
            <Button text="Very good" />
        </HBox>

        <HBox alignment="CENTER" spacing="5.0">
            <Button fx:id="buttonFlipCard" onAction="#clickFlipCard" text="Flip" />
            <Button fx:id="buttonNextCard" onAction="#clickNextCard" text="Next" />
        </HBox>
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
