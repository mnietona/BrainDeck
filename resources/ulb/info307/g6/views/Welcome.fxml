<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.Font?>
<VBox stylesheets="@welcomeStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Welcome">
    <!-- Title -->
    <HBox alignment="CENTER" prefHeight="200.0" prefWidth="700.0" spacing="5.0">
        <WebView fx:id="welcomeWebView" prefHeight="200.0" prefWidth="700.0" />
    </HBox>

    <!-- Stats on main menu -->
    <HBox alignment="CENTER" prefHeight="100.0" spacing="25.0" style="-fx-border-width: 2px;" VBox.vgrow="ALWAYS">
        <Text fx:id="mainMenuStat1" style="-fx-font-family: 'Cakecafe';" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="mainMenuStat2" style="-fx-font-family: 'Cakecafe';" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
    </HBox>

    <!-- Menu buttons -->
    <HBox alignment="CENTER" spacing="5.0">
        <Button contentDisplay="TOP" onAction="#studyButtonAction" prefHeight="150.0" prefWidth="150.0" text="Study">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0">
                    <Image url="@images/books.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#editButtonAction" prefHeight="150.0" prefWidth="150.0" text="Edit">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/edit.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#statisticsButtonAction" prefHeight="150.0" prefWidth="150.0" text="Statistics">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/stats.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#achievementsButtonAction" prefHeight="150.0" prefWidth="150.0" text="Achievements">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/trophy.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</VBox>
