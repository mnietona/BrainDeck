<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="720.0" minWidth="1280.0" stylesheets="@welcomeStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Welcome">
   <HBox alignment="TOP_RIGHT" prefHeight="19.0" prefWidth="1180.0">
      <children>
         <Button fx:id="helpButton" onAction="#helpButtonAction">
              <graphic>
                  <ImageView fitHeight="25.0" preserveRatio="true">
                      <Image url="@images/questionMark.png" />
                  </ImageView>
              </graphic>
          </Button>

      </children>
   </HBox>
    <!-- Title -->
    <Text text="Braindeck">
        <font>
            <Font name="Broadway" size="75.0" />
        </font>
    </Text>

    <!-- Menu buttons -->
    <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
        <Button contentDisplay="TOP" onAction="#studyButtonAction" prefHeight="150.0" prefWidth="150.0" text="Study">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0">
                    <Image url="@images/books.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#editButtonAction" prefHeight="150.0" prefWidth="150.0" text="Edit">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/editWelcome.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#statisticsButtonAction" prefHeight="150.0" prefWidth="150.0" text="Statistics">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/statisticsWelcome.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#achievementsButtonAction" prefHeight="150.0" prefWidth="150.0" text="Achievements">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/trophy.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Stats on main menu -->
    <HBox alignment="CENTER" prefHeight="100.0" spacing="25.0">
        <Text fx:id="mainMenuStat1" text=" " textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="mainMenuStat2" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
    </HBox>

    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
