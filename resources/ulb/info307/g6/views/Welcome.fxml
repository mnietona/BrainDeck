<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<!-- dynamic window default size -->
<HBox alignment="CENTER" spacing="5.0" stylesheets="@welcomeStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Welcome">
    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="700.0" spacing="5.0">
        <WebView fx:id="welcomeWebView" prefHeight="100.0" prefWidth="700.0" />
    </HBox>
    <HBox alignment="CENTER" prefHeight="300.0" prefWidth="700.0" spacing="5.0">
        <Button contentDisplay="TOP" onAction="#studyButtonAction" prefHeight="50.0" prefWidth="80.0" text="Study">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/books.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#editButtonAction" prefHeight="50.0" prefWidth="80.0" text="Edit">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/edit.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#statisticsButtonAction" prefHeight="50.0" prefWidth="80.0" text="Statistics">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/stats.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" onAction="#achievementsButtonAction" prefHeight="50.0" prefWidth="112.0" text="Achievements">
            <graphic>
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <Image url="@images/trophy.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    </VBox>
</HBox>
