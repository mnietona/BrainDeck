<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefWidth="1280.0" prefHeight="720.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.CardsStatistics">
    <!-- Left pane : list of cards + back -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="cardListView" prefWidth="169.0" VBox.vgrow="ALWAYS" />
        <Button onAction="#clickBack" prefWidth="169.0" text="Back" />
    </VBox>

    <!-- Right pane : card statistics -->
    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <Text fx:id="cardStat1" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="cardStat2" textAlignment="CENTER" text="Select a card">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="cardStat3" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="cardStat4" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
