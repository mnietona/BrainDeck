<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" spacing="5.0" stylesheets="@menusStyles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.CardsStatistics">
    <!-- Left pane : list of cards + back -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="cardListView" prefWidth="225.0" VBox.vgrow="ALWAYS" />
        <Button  onAction="#clickBack">
            <graphic>
                <ImageView  fitHeight="35.0" preserveRatio="true">
                    <Image url="@images/back.png" />
                </ImageView>
            </graphic>
        </Button>
    </VBox>

    <!-- Right pane : card statistics -->
    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <Text fx:id="cardStat1" style="-fx-font-family: 'Cakecafe';" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="cardStat2" style="-fx-font-family: 'Cakecafe';" text="Select a card" textAlignment="CENTER">
            <font>
                <Font size="40.0" />
            </font>
        </Text>
        <Text fx:id="cardStat3" style="-fx-font-family: 'Cakecafe';" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="cardStat4" style="-fx-font-family: 'Cakecafe';" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
