<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="720.0" minWidth="1280.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Tutorial">
    <!-- Tutorial screenshot + tutorial text -->
    <VBox alignment="CENTER" spacing="25.0" VBox.vgrow="ALWAYS">
        <ImageView fx:id="tutorialScreenshot" fitHeight="500" preserveRatio="true" />
        <Text fx:id="tutorialText" styleClass="normal-text" textAlignment="CENTER" wrappingWidth = "640"/>
    </VBox>
    <!-- Buttons -->
   <HBox alignment="CENTER">
          <Button onAction="#clickHome">
              <graphic>
                  <ImageView fitHeight="25.0" preserveRatio="true"><Image url="@icons/home-light.png" /></ImageView>
              </graphic>
          </Button>
         <Button fx:id="nextPageButton" onAction="#clickNext">
            <graphic>
               <ImageView fitHeight="25.0" preserveRatio="true"><Image url="@icons/next-light.png" /></ImageView>
            </graphic>
         </Button>
      </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
