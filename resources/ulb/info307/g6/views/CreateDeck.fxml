<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" minHeight="720.0" minWidth="1280.0" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.CreateDeck">
    <Text text="Title of your deck" styleClass="normal-text" />
    <TextField fx:id="inputBox" maxWidth="300.0" minWidth="300.0" onKeyTyped="#textChange" promptText="Title of your deck" />
    <!-- Cancel and Confirm Buttons -->
    <HBox alignment="CENTER" spacing="5.0">
        <Button onAction="#clickBack">
            <graphic>
                <ImageView fitHeight="25.0" preserveRatio="true">
                    <Image url="@images/back.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="buttonConfirm" onAction="#clickConfirm">
            <graphic>
                <ImageView fitHeight="25.0" preserveRatio="true">
                    <Image url="@images/confirm.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>
