<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.Statistics">
    <!-- Left pane : list of decks + home -->
    <VBox alignment="CENTER" spacing="5.0">
        <ListView fx:id="deckListView" prefWidth="169.0" VBox.vgrow="ALWAYS" />
        <Button onAction="#clickHome" prefWidth="169.0" text="Home" />
    </VBox>

    <!-- Right pane : Global statistics + deck statistics + card statistics button -->
    <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">

        <!-- Global statistics -->
        <HBox alignment="CENTER" prefHeight="100.0" spacing="25.0" style="-fx-border-color: #DDDDDD; -fx-border-width: 2px;">
            <Text fx:id="globalStat1" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="globalStat2" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="globalStat3" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="globalStat4" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="globalStat5" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
        </HBox>

        <!-- Deck statistics -->
        <VBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
            <Text fx:id="deckStat1">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="deckStat2" text="Select a deck to see detailed information">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="deckStat3">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <Text fx:id="deckStat4">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
        </VBox>

        <!-- Cards statistics button -->
        <Button fx:id="cardsStatisticsButton" disable="true" onAction="#clickCardsStatistics" text="Cards statistics" />
    </VBox>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
