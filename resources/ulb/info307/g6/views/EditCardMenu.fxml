<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.info307.g6.views.EditCardMenu">
    <HBox alignment="TOP_LEFT" spacing="10">
        <ComboBox fx:id="pickCard" onMouseClicked="#clickChoice" prefWidth="150.0" promptText="Pick a card" />
    </HBox>
    <HBox alignment="TOP_CENTER" spacing="10">
        <Button fx:id="buttonEditCard" mnemonicParsing="false" onAction="#clickEditCard" text="Edit card" />
        <Button fx:id="buttonCreateCard" mnemonicParsing="false" onAction="#clickCreateCard" text="Create card" />
        <Button fx:id="buttonRemoveCard" mnemonicParsing="false" onAction="#clickRemoveCard" text="Remove card" />
    </HBox>
    <VBox alignment="CENTER" prefHeight="247.0" prefWidth="666.0">
        <children>
         <Label text="Question">
            <font>
               <Font size="20.0" />
            </font></Label>
         <TextArea fx:id="questionInput" prefHeight="93.0" prefWidth="666.0" />
         <Label layoutX="305.0" layoutY="74.0" text="Answer">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <TextArea fx:id="answerInput" layoutX="10.0" layoutY="87.0" prefHeight="93.0" prefWidth="666.0"  />
        </children>
    </VBox>
    <Region VBox.vgrow="ALWAYS" />
    <HBox alignment="BOTTOM_CENTER" prefHeight="35.0" prefWidth="666.0" spacing="10">
        <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
    </HBox>
    <VBox prefHeight="51.0" prefWidth="666.0" />
</VBox>
